{% extends 'base.html.twig' %}
{% set title = "My series" %}
{% set noMenu = 1 %}

{% block body %}

<h2>My Series</h2>

<div class="row">
	<div class="col s2 m6">
		<div class="card blue-grey darken-1 center">
    		<div class="card-action">
    			<a href="{{ path('tvseries_index') }}">Add a new series</a>
    		</div>
		</div>
	</div>
{% for series in userSeries %}
	<div class="col s2 m6">
		<div class="small card">
			<div class="card-image">
				<img src="{{ series.image }}" alt="{{ series.name }}" />
				<span class="card-title">{{ series.name }}</span>
			</div>
			<div class="card-content">
				{{ series.description }}
			</div>
			<div class="card-action">
				<a href="{{ path('tvseries_show', { 'id': tvSeries.id }) }}" class="blue-text darken-4">More information</a>
			</div>
		</div>
	</div>
{% endfor %}
</div>

{% endblock %}